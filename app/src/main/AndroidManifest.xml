<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Esprit.sim.kidzwo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Math"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.MathNiveau"
            android:parentActivityName=".Activities.Math" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SignUpActivity" />
        <activity
            android:name=".Activities.French"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.FrenchNiveau"
            android:parentActivityName=".Activities.French" />
        <activity
            android:name=".Activities.Qi"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.QiNiveau"
            android:parentActivityName=".Activities.Qi" />
        <activity
            android:name=".Activities.Audio"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.AudioNiveau"
            android:parentActivityName=".Activities.Audio" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity android:name=".Activities.BookPdf" />
        <activity
            android:name=".Activities.English"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.EnglishNiveau"
            android:parentActivityName=".Activities.English" />
        <activity
            android:name=".Activities.Memory"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.CameraToText" />

        <activity android:name=".Activities.FirstScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
    </application>

</manifest>